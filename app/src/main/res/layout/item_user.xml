<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    android:elevation="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp">
    <TextView
        android:id="@+id/tv_itemTenTK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_17sdp"
        android:text="Tên tài khoản"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_MatKhauTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:text="Mật khẩu :  "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_itemTenTK"/>
    <TextView
        android:id="@+id/tv_itemMatKhauTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:text="1234567"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/tv_MatKhauTK"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_itemTenTK"/>
    <TextView
        android:id="@+id/tv_ChucVuTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:text="Chức vụ   :  "
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_MatKhauTK"/>
    <TextView
        android:id="@+id/tv_itemChucVuTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:text="Admin"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/tv_MatKhauTK"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_MatKhauTK"/>
        <ImageButton
            android:src="@drawable/delete"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:layout_marginRight="@dimen/_5sdp"
            android:id="@+id/btn_itemDeleteTK"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageButton
            android:src="@drawable/edit"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/btn_itemEditTK"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_itemDeleteTK"

        />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>